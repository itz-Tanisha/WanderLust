<% layout("/layouts/boilerplate") %>

    <main>
        <div class="form-container">

            <form method="post" action="/listings" enctype="multipart/form-data" class="listing-form" id="listing-form"
                novalidate>

                <h1 class="form-heading">Property Details</h1>

                <div class="form-input-container">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" type="text" placeholder="Enter title" name="title" required class="form-input" />
                </div>

                <div class="form-input-container">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" placeholder="Describe your property in detail" name="description"
                        class="form-input" rows="5" required></textarea>
                </div>

                <div class="form-input-container">
                    <label for="price" class="form-label">Price (per night)</label>
                    <input id="price" placeholder="Enter price in â‚¹" name="price" type="number" min="0" required
                        class="form-input" />
                </div>

                <div class="form-input-container">
                    <label for="location" class="form-label">Location</label>
                    <input id="location" type="text" placeholder="City or area" name="location" class="form-input"
                        required />
                </div>

                <div class="form-input-container">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" type="text" placeholder="Country" name="country" class="form-input" required />
                </div>

                <div class="form-input-container">
                    <label for="imageFile" class="form-label">Property Image</label>
                    <input type="file" id="imageFile" name="imageFile" class="form-input">

                    <div class="divider">
                        <hr><span class="divider-text">OR</span>
                        <hr>
                    </div>

                    <input type="url" id="imageUrl" name="imageUrl" placeholder="Enter image url" class="form-input">
                </div>

                <div class="form-buttons">
                    <button type="submit" class="submit-button">Add Listing</button>
                    <button type="reset" class="discard-button">Discard</button>
                </div>

            </form>
        </div>
    </main>