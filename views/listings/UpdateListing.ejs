<% layout("/layouts/boilerplate") %>

<body>

    <h1>Edit Listing :  <%= _id %></h1>

    <form method="post" action="/listings/<%= _id %>/edit?_method=PUT" enctype="multipart/form-data">

        <input type="text" placeholder="Enter title" name="title" value="<%= title %>" /> <br><br>

        <textarea placeholder="Enter description" name="description" rows="10" cols="30"><%= description %></textarea> <br><br>

        <input placeholder="Enter price" name="price" type="number" value="<%= price %>" /> <br><br>

        <input type="text" placeholder="Enter location" name="location" value="<%= location %>" /> <br><br>

        <input type="text" placeholder="Enter country" name="country" value="<%= country %>" />  <br><br>

        <h3> Edit Image </h3>
        <input type="file" name="imageFile"> &nbsp;
        <input type="url" name="imageUrl" placeholder="Enter image url">
        
        <br>
        <br>

        <button type="submit">Edit </button>

        <br><br>
        <img src="<%= image.url %>" width="500px" />

    </form>

</body>

